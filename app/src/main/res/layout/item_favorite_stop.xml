<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E6E6E6"
    android:backgroundTint="#F7F2FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Optional section label -->
        <TextView
            android:id="@+id/favoriteSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Stop"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Row: Spinner + Remove button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/favoriteStopSpinner"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/favoriteRemoveButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="10dp"
                android:text="âœ•"
                android:textSize="16sp"
                app:cornerRadius="10dp"
                app:iconPadding="0dp"
                app:backgroundTint="#F0E6FF"
                android:textColor="#7A1FA2" />
        </LinearLayout>

        <!-- Row: Time button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/favoriteTimeButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="Set time"
            app:cornerRadius="10dp"
            app:backgroundTint="#F0E6FF"
            android:textColor="#7A1FA2" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
